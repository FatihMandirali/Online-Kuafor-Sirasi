
<div class="col-md-12 kuaforler" ng-show="hiddenfavorilerim" ng-controller="_kullaniciprofilfavoriler">
    <div class="container">
        <div class="row">

            <div class="col-md-6" ng-repeat="x in pfavo">
                <div class="pricing card-deck flex-column flex-md-row mb-3">
                    <div class="card card-pricing text-center px-3 mb-4">
                        <span class="h6 w-60 mx-auto px-4 py-1 rounded-bottom bg-primary text-white shadow-sm" id="trascesitbaslik">Favorilerim</span>
                        <div class="bg-transparent card-header pt-4 border-0">
                            <h1 class="h1 font-weight-normal text-primary text-center mb-0" id="trascesiticerik" data-pricing-value="15"><span class="price">{{x.KuaforId.Ad}}</span></h1>
                        </div>
                        <div class="card-body pt-0">
                            <ul class="list-unstyled mb-4">
                                <li><b>Ad : </b>{{x.ad}}</li>
                                <li><b>Adres : </b>{{x.adres}}</li>

                                <li><b>Şehir :</b> {{x.sehir}}</li>

                            </ul>
                            <button type="button" class="btn btn-outline-success mb-3">İncele</button>
                            <button type="button" class="btn btn-outline-secondary mb-3">Sıranı Al</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
