
@{
    ViewBag.Title = "TrasCesitleriIncele";
    Layout = "~/Views/KuaforAdmin/Index.cshtml";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2>Detaylar</h2>
    </div>
</div>
<div class="row" ng-app="MyApp12">
    <div class="col-md-8 col-md-offset-2" ng-controller="trascesitleriincele">

        <hr />



        <div class="form-group">
            @*<input type="text" id="name2"  />*@
            @Html.Label("Çeşit", htmlAttributes: new { @class = "control-label col-md-2" })
