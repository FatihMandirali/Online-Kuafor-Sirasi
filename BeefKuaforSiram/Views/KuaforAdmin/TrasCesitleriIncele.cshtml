                <input type="text" class="form-control Cesit" value="{{trascesit.Cesit}}" />

            </div>
        </div>

        <div class="form-group">
            @*<input type="text" id="name2"  />*@
            @Html.Label("Fiyat", htmlAttributes: new { @class = "control-label col-md-2" })
