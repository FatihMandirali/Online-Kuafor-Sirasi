                <input type="text" class="form-control Fiyat" value="{{trascesit.Fiyat}}" />


            </div>
        </div>

        <div class="form-group">
            @*<input type="text" id="name2"  />*@
            @Html.Label("DK", htmlAttributes: new { @class = "control-label col-md-2" })
