
@{
    ViewBag.Title = "TrasCesitleri";
    Layout = "~/Views/KuaforAdmin/Index.cshtml";
}
@if (@Session["kuaforsecim"] == null)
{
    <input type="hidden" id="sessiondeger" value="@Session["yoneticiYonet"]" />
    <div class="bg-success p-3 col-md-12">
        <div class="row">
            <div class="col-md-8">
                <b style="color:white">@Session["yoneticiYonetKuaforAd"]</b>&nbsp;&nbsp; Kuaforuna Bağlanıldı.
            </div>
            <div class="col-md-4">
                <a href="/YoneticiAdmin/Kuaforler"><b class="pull-right mr-3 text-danger" style="cursor:default" id="btnYoneticiAdmin">Yönetici Admin</b></a>
            </div>
        </div>
    </div>
}
else
{
    <input type="hidden" id="sessiondeger" value="@Session["kuaforsecim"]" />
}
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Alınmış Sıralar
        <a href="/KuaforAdmin/TrasCesitleriOlustur" class="btn btn-success btn-sm pull-right">Oluştur</a>
    </div>
    <div class="card-body" ng-app="MyApp1">
        <div class="table-responsive" ng-controller="trascesitleri">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Çeşit</th>
                        <th>Fiyat</th>
                        <th>Dk</th>
                        <th>Sil</th>
                        <th>İncele</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Çeşit</th>
                        <th>Fiyat</th>
                        <th>Dk</th>
                        <th>Sil</th>
                        <th>İncele</th>
                    </tr>
                </tfoot>
                <tbody>
                    <tr ng-repeat="x in tras">
                        <td>{{x.Cesit}}</td>
                        <td>{{x.Fiyat}}</td>
                        <td>{{x.Dk}}</td>
                        <td><a href="/KuaforAdmin/TrasCesitleriIncele/{{x.Id}}" class="btn btn-primary">İncele</a> </td>
                        <td><input type="button" name="{{x.Id}}" class="btn btn-danger trascesitsil" id="trascesitsil" value="Sil" /></td>

                    </tr>

                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>


