
@{
    ViewBag.Title = "KuaforSahipEkle";
    Layout = "~/Views/YoneticiAdmin/Index.cshtml";
}


@using (Html.BeginForm("KuaforSahipEkle", "YoneticiAdmin", FormMethod.Post))
{

    <div class="form-group">
        @Html.Label("Adı", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" value="" name="Ad" id="Ad" class="form-control" />

        </div>
    </div>
    <div class="form-group" ng-controller="kuaforsahibi">
        @Html.Label("Soyad", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" value="" name="Soyad" id="Soyad" class="form-control" />

        </div>
    </div>

    <div class="form-group">
        @Html.Label("EMail", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" value="" name="EMail" id="EMail" class="form-control" />

        </div>
    </div>

    <div class="form-group">
        @Html.Label("Kullanıcı Adı", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" value="" name="KullaniciAdi" id="KullaniciAdi" class="form-control" />

        </div>
    </div>

    <div class="form-group">
        @Html.Label("Şifre", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" value="" name="Sifre" id="Sifre" class="form-control" />

        </div>
    </div>

    <div class="form-group">
        @Html.Label("Şehir", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select name="Sehir" id="Sehir" class="form-control">
                <option value="">Seçin...</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Semt", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select name="Semt" id="Semt" class="form-control" disabled="disabled">
                <option value="">Seçin...</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Telefon", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" placeholder="(___)___ __ __" value="" name="Telefon" id="Telefon" class="form-control" />


        </div>
    </div>

    <div class="form-group">
        @Html.Label("Tc", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" value="" name="Tc" id="Tc" class="form-control" />


        </div>
    </div>


    <div class="form-group">
        @Html.Label("Doğum Tarihi", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="date" name="DogumTarihi" id="DogumTarihi" class="form-control" />

        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">
                <span class="glyphicon glyphicon-floppy-disk"></span>Oluştur
            </button>
        </div>
    </div>
}


