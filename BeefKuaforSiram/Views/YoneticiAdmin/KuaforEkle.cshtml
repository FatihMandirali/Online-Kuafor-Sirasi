
@{
    ViewBag.Title = "KuaforEkle";
    Layout = "~/Views/YoneticiAdmin/Index.cshtml";
}

@using (Html.BeginForm("KuaforEkle", "YoneticiAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="form-group">
        <img src="" class="img-circle" width="128" height="128" />

        <br /><br />
        <input type="file" name="ProfileImage" id="ProfileImage" class="form-control" multiple="multiple" /><br />
        <span class="glyphicon glyphicon-info-sign">&nbsp;</span>
        <span><i>Lütfen jpg,jpeg ya da png formatı kullanın.</i></span>
    </div>
    <div class="form-group">
        @Html.Label("Kuaför Adı", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" value="" name="Ad" id="Ad" class="form-control" />

        </div>
    </div>
    <div class="form-group" ng-controller="kuaforsahibi">
        @Html.Label("Kuaför Sahip", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select name="Resim" id="Resim" class="form-control">

                <option ng-repeat="x in kuaforsah" value="{{x.Tc}}">{{x.Ad}}</option>
            </select>

        </div>
    </div>

    <div class="form-group">
        @Html.Label("Şehir", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select name="Sehir" id="Sehir" class="form-control">
                <option value="">Seçin...</option>
            </select>

        </div>
    </div>

    <div class="form-group">
        @Html.Label("Semt", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select name="Semt" id="Semt" class="form-control" disabled="disabled">
                <option value="">Seçin...</option>
            </select>

        </div>
    </div>

    <div class="form-group">
        @Html.Label("E-Mail", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" value="" name="EMail" id="EMail" class="form-control" />

        </div>
    </div>

    <div class="form-group">
        @Html.Label("Açılış Saati", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="time" value="" name="AcilmaSaati" id="AcilmaSaati" class="form-control" />

        </div>
    </div>

    <div class="form-group">
        @Html.Label("Kapanma Saati", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="time" value="" name="KapanmaSaati" id="KapanmaSaati" class="form-control" />

        </div>
    </div>

    <div class="form-group">
        @Html.Label("Tahmini Traş Süresi", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="number" value="" name="Aralik" id="Aralik" class="form-control" />

        </div>
    </div>

    <div class="form-group">
        @Html.Label("Telefon", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" placeholder="(___)___ __ __" value="" name="Telefon" id="Telefon" class="form-control" />

        </div>
    </div>

    <div class="form-group">
        @Html.Label("Bay/Bayan", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select name="BayBayan" id="BayBayan" class="form-control BayBayan">

                <option value="1">Bay</option>
                <option value="2">Bayan</option>
            </select>

        </div>
    </div>



    <div class="form-group">
        @Html.Label("Adres", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <textarea class="form-control UzunAciklama" name="Adres" id="Adres" rows="10"></textarea>


        </div>
    </div>



    <div class="form-group">
        @Html.Label("Eklenme Tarihi", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="date" name="EklenmeTarihi" id="EklenmeTarihi" class="form-control" />

        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">
                <span class="glyphicon glyphicon-floppy-disk"></span>Oluştur
            </button>
        </div>
    </div>
}


