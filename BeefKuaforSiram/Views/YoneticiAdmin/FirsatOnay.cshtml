
@{
    ViewBag.Title = "FirsatOnay";
    Layout = "~/Views/YoneticiAdmin/Index.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Fırsat Onay
    </div>
    <div class="card-body">
        <div class="table-responsive" ng-controller="firsatlar">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Fırsat İçerik</th>
                        <th>Fırsat Yayın Tarihi</th>
                        <th>Kuafor</th>
                        <th>Şehir</th>
                        <th>Sil</th>
                        <th>İncele</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Fırsat İçerik</th>
                        <th>Fırsat Yayın Tarihi</th>
                        <th>Kuafor</th>
                        <th>Şehir</th>
                        <th>Sil</th>
                        <th>İncele</th>
                    </tr>
                </tfoot>
                <tbody>
                    <tr ng-repeat="x in firsat" ng-if="x.onayTuru==3" class="bg-primary">

                        <td>{{x.firsatAdi}}</td>
                        <td>{{x.tarih}}</td>
                        <td>{{x.kuaforAdi}}</td>
                        <td>{{x.sehir}}</td>
                        <td><a href="/YoneticiAdmin/FirsatIncele/{{x.id}}" class="btn btn-primary">İncele</a> </td>
                        <td><input type="button" name="{{x.id}}" class="btn btn-danger firsatsil" id="firsatsil" value="Sil" /></td>

                    </tr>
                    <tr ng-repeat="x in firsat" ng-if="x.onayTuru==2" class="bg-success">

                        <td>{{x.firsatAdi}}</td>
                        <td>{{x.tarih}}</td>
                        <td>{{x.kuaforAdi}}</td>
                        <td>{{x.sehir}}</td>
                        <td><a href="/YoneticiAdmin/FirsatIncele/{{x.id}}" class="btn btn-primary">İncele</a> </td>
                        <td><input type="button" name="{{x.id}}" class="btn btn-danger firsatsil" id="firsatsil" value="Sil" /></td>

                    </tr>
                    <tr ng-repeat="x in firsat" ng-if="x.onayTuru==0" class="bg-danger">

                        <td>{{x.firsatAdi}}</td>
                        <td>{{x.tarih}}</td>
                        <td>{{x.kuaforAdi}}</td>
                        <td>{{x.sehir}}</td>
                        <td><a href="/YoneticiAdmin/FirsatIncele/{{x.id}}" class="btn btn-primary">İncele</a> </td>
                        <td><input type="button" name="{{x.id}}" class="btn btn-danger firsatsil" id="firsatsil" value="Sil" /></td>

                    </tr>



                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>

